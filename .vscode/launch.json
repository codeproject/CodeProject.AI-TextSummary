{
    "version": "0.2.0",
    "configurations": [
        {
            "presentation": {
                "group": "Start",
                "hidden": false
            },

            "name": "Launch TextSummary",
            "type": "debugpy",
            "justMyCode": false,
            "request": "launch",
            "program": "summary_adapter.py",
            // "args": [ "--selftest" ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",

            "env": {
                "RUNNING_IN_VSCODE": "True",
                // "CPAI_LOG_VERBOSITY": "Loud",
                "CPAI_PORT": "32168",

                "NLTK_DATA": "${workspaceFolder}/../CodeProject.AI-Modules/CodeProject.AI-TextSummary/nltk_data"
            },

            "python": "${workspaceFolder}\\bin\\windows\\python37\\venv\\Scripts\\python.exe",
            "windows": {
                "python": "${workspaceFolder}/bin/windows/python37/venv/Scripts/python.exe"
            },
            "linux": {
                "python": "${workspaceFolder}/bin/linux/python38/venv/bin/python",
            },
            "osx": {
                "python": "${workspaceFolder}/bin/macos/python38/venv/bin/python",
            }
        }
    ]
}